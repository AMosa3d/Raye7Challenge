<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_font_size"
            android:layout_marginLeft="10dp"
            android:text="Date"
            android:textColor="@color/label_color"
            android:id="@+id/booking_date_textview"
            android:layout_weight="4.5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:id="@+id/booking_date_button"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_font_size"
            android:textColor="@color/label_color"
            android:id="@+id/booking_time_textview"
            android:text="Time"
            android:layout_marginLeft="10dp"
            android:layout_weight="4.5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:id="@+id/booking_time_button"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        >

            <Button
                android:id="@+id/booking_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book"
                android:layout_marginLeft="100dp"
                />

            <Button
                android:id="@+id/canceling_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/booking_trip_button"
                android:layout_toEndOf="@+id/booking_trip_button" />



    </RelativeLayout>

</LinearLayout>